.vm-checkbox(
    :disabled="status === 'disabled'"
    :readonly="status === 'readonly'"
    :class="{
        'is--checked': checked,
        'is--focused': isFocused,
        'is--right': iconRight    
    }"
    @click="click"
)
    .vm-checkbox__icon
        .vm-checkbox__checkmark(v-if="checked")

    .vm-checkbox__label(
        v-if="label || $slots.default"
    ) 
        | {{ label }}
        slot
    
    input.vm-checkbox__input(
        type="checkbox"
        ref="input"
        :disabled="freezed"
        :checked="checked"
        :name="name"
        @click="click"
        @keyup.enter="click"
        @keyup.space="click"
        @focus="isFocused = true"
        @blur="isFocused = false"
    )
