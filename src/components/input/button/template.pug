button.vm-button(
    :disabled="disabled"
    :type="type"
    :class="{
        'is--primary': primary,
        'is--raised': raised,
        'is--icon': icon,
        'is--loading': loading,
        'is--full': fullWidth,
        'is--shadow': shadow
    }"
    @click="click"
)
    vm-loader(v-if="loading")
    template(v-if="icon")
       vm-icon {{ icon }}
       slot
    
    .vm-button__label(v-else)
        slot
