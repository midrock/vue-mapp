.vm-outside(
    :class="{
        'is--active': active
    }"
)
    .vm-outside__content(
        :tabindex="-1"
        :style="contentStyles"
        :class="['is--' + place, contentClass]"
    )
        slot

    .vm-outside__overlay(
        v-if="!nooverlay"
        @click="clickOnOverlay"
    )
