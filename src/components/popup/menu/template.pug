.vm-menu
    .vm-menu__trigger(
        ref="trigger"
        :class="{
            'vm-menu__trigger--disabled': disabled    
        }"
        @click="clickOnTrigger"
        @mouseover="mouseoverTrigger"
        @mouseout="mouseoutTrigger"
    )
        slot(name="trigger")
    vm-popup(
        v-if="opened"
        v-bind="$attrs"
        ref="popup"
        @outside="clickOnOverlay"
        @mouseout.native="mouseoutContent"
        @outclick="onOutClick"
    )
        slot
